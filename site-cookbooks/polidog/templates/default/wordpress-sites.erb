server {
  listen       80;
  server_name  <%= @host %>;
  root         <%= @root %>;
  access_log   <%= node['nginx']['log_dir'] %>/<%= @name %>.access.log;
  error_log    <%= node['nginx']['log_dir'] %>/<%= @name %>.error.log;

  <% if @code -%>
  <%= @code %>
  <% end -%>

  include <%= node['nginx']['dir'] %>/wordpress.conf;
}
